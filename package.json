{
    "name": "markdown-formatter",
    "displayName": "markdown-formatter",
    "description": " A Markdown Plugin for code artist",
    "version": "0.8.2",
    "icon": "icon.png",
    "publisher": "mervin",
    "engines": {
        "vscode": "^1.0.0"
    },
    "keywords": [
        "Markdown",
        "Formatters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sumnow/markdown-formatter"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Markdown Formatter",
            "properties": {
                "markdownFormatter.fullWidthTurnHalfWidth": {
                    "type": "string",
                    "default": "auto",
                    "description": "Unify full-width (，：；！“”‘’（）？。) as a half-width character(,:;!''()?.)."
                },
                "markdownFormatter.codeAreaToBlock": {
                    "type": "string",
                    "default": "",
                    "description": "Convert code area to code block"
                },
                "markdownFormatter.displayTime": {
                    "type": "boolean",
                    "default": false,
                    "description": "Display time before article"
                },
                "markdownFormatter.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable markdown-formatter."
                },
                "markdownFormatter.formatCodes": {
                    "type": "boolean",
                    "default": true,
                    "description": "set false to stop all code format"
                },
                "markdownFormatter.formatOpt": {
                    "type": "object",
                    "default": {},
                    "description": "config as js-beautify options"
                },
                "markdownFormatter.formatULSymbol": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable formatted unordered list symbol."
                },
                "markdownFormatter.spaceAfterFullWidth": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to insert a space after the full-width symbol"
                }
            }
        },
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/markdown.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "build": "tsc",
        "test": "jest",
        "test-c": "jest --coverage"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "escape-string-regexp": "^1.0.5",
        "jest": "^25.4.0",
        "ts-jest": "^25.4.0",
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    },
    "dependencies": {
        "escape-string-regexp": "^1.0.5",
        "js-beautify": "^1.8.8"
    }
}